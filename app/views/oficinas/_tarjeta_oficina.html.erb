    
    <div class="card" style="width: 18rem; margin-top: 0.5em">
        <%#<img src="..." class="card-img-top" alt="...">%>
        <div class="card-body">
        <h5 class="card-title">Oficina: <%= oficina.codigo %></h5>
        <p class="card-text"><p>Precio: <%= oficina.precio %></p>
            <% if oficina.esta_alquilada %>
                <span>Arrendado por:</span>
                <ul>
                    <% oficina.inquilinos.each do |inquilino| %>
                        <li>
                            <%= inquilino.nombre + " " + inquilino.apellido %>
                        </li>
                    <% end %>    
                </ul>    
            <% else %>
                Disponible
                
            <% end %>
        </p>
        <a href="#" class="btn btn-primary">Modificar</a>
        <a href="#" class="btn btn-warning">Borrar Inquilinos</a>
    </div>
</div>
